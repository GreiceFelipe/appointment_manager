<%= form_with(model: patient, local: true) do |form| %>
  <% if patient.errors.any? %>
    <div id="error_explanation" class="notification is-danger is-light">
      <h2><%= pluralize(patient.errors.count, "error") %> prohibited this patient from being saved:</h2>

      <ul>
        <% patient.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <p class="control has-icons-left">
      <%= form.text_field :name, class: "input", placeholder: "Full name" %>
      <span class="icon is-small is-left">
        <i class="fas fa-user-injured"></i>
      </span>
    </p>
  </div>

  <div class="field">
    <label class="label">Birth date: </label>
    <p class="control has-icons-left">
      <%= form.date_field :birth_date, class: "input" %>
      <span class="icon is-small is-left">
        <i class="far fa-calendar-alt"></i>
      </span>
    </p>
  </div>

  <div class="field">
    <p class="control has-icons-left">
      <%= form.text_field :cpf, class: "input", placeholder: "CPF"  %>
      <span class="icon is-small is-left">
        <i class="far fa-address-card"></i>
      </span>
    </p>
  </div>

  <div class="field">
    <p class="control center">
      <%= form.submit nil, class: 'button is-fullwidth is-rounded is-primary' %>
    </p>
  </div>
<% end %>
