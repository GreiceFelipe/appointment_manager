<section class="section">
  <% if notice.present? %>
    <div class="notification is-info is-light">
      <p id="notice"><%= notice %></p>
    </div>
  <% end %>

  <div class="container column is-half is-mobile">
    <h1 class="is-size-3 is-size-4-mobile has-text-centered">Doctors</h1>
  </div>

  <div class="column is-three-fifths is-offset-one-fifth is-mobile">
    <div class="column is-10 is-offset-2">
      <div class="column is-3">
        <%= link_to 'New Doctor', new_doctor_path, class: "button is-fullwidth is-rounded is-outlined is-primary" %>
      </div>
      <br>

      <div class="table-container">
        <table class="table is-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th>Crm</th>
              <th>Crm uf</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @doctors.each do |doctor| %>
              <tr>
                <td><%= doctor.name %></td>
                <td><%= doctor.crm %></td>
                <td><%= doctor.crm_uf %></td>
                <td><%= link_to 'Edit', edit_doctor_path(doctor), class: "button is-fullwidth is-rounded is-outlined is-info" %></td>
                <td><%= link_to 'Destroy', doctor, method: :delete, data: { confirm: 'Are you sure?' }, class: "button is-fullwidth is-rounded is-outlined is-danger" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
  </div>
</section>
